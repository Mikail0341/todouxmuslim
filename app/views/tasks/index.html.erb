<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th class="tachesth">Les taches</th>
      <th class="finith">Fini ?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Modifier', edit_task_path(task) %></td>
        <td><%= link_to 'Supprimer', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter une nouvelle tache.', new_task_path %>
